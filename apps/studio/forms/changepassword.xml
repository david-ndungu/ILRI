<?xml version="1.0" encoding="UTF-8"?>
<form name="changepassword">
    <fieldset name="changepassword">
        <field name="passwordcurrent" type="varchar" length="32">
            <element name="passwordcurrent" type="password" label="password.current.label"></element>
        </field>
        <field name="password" type="varchar" length="32">
            <element name="password" type="password" label="password.label"></element>
        </field>
        <field name="passwordconfirm" type="varchar" length="32">
            <element name="passwordconfirm" type="password" label="password.confirm.label"></element>
        </field>
	    <field name="submit">
	        <element name="action" type="submit" value="action.changepassword"></element>
	    </field>
	    <field name="reset">
	        <element name="reset" type="reset" value="action.reset"></element>
	    </field>	    
	</fieldset>
</form>