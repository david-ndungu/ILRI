<?xml version="1.0" encoding="UTF-8"?>
<form name="signin">
    <fieldset name="signin">
        <field name="login" type="varchar" length="255">
            <element name="login" type="text" label="login.label" value=""></element>
        </field>
        <field name="password" type="varchar" length="32">
            <element name="password" type="password" label="password.label"></element>
        </field>
	    <field name="submit">
	        <element name="action" type="submit" value="action.signin"></element>
	    </field>
	    <field name="reset">
	        <element name="reset" type="reset" value="action.reset"></element>
	    </field>	    
	</fieldset>
</form>