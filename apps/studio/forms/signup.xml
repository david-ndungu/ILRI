<?xml version="1.0" encoding="UTF-8"?>
<form name="signup">
    <fieldset name="signup">
        <field name="login" type="varchar" length="255">
            <element name="login" type="text" label="login.label" placeholder="login.placeholder" value=""></element>
        </field>
        <field name="email" type="varchar" length="255">
            <element name="email" type="text" label="email.label" placeholder="email.placeholder" value=""></element>
        </field>
        <field name="password" type="varchar" length="32">
            <element name="password" type="password" label="password.label"></element>
        </field>
        <field name="password.confirm" type="varchar" length="32">
            <element name="password.confirm" type="password" label="password.confirm.label"></element>
        </field>
	    <field name="submit">
	        <element name="action" type="submit" value="action.signup"></element>
	    </field>
	    <field name="reset">
	        <element name="reset" type="reset" value="action.reset"></element>
	    </field>
	</fieldset>
</form>